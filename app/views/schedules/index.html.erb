<div class="flex justify-between items-center">
  <p class="text-lg ml-6">お薬とサプリメントのスケジュール</p>
  <%= link_to "予定を立てる", new_user_schedule_path(current_user), class: "text-blue-500 hover:underline mr-6" %>
</div>
<div class="divider"></div>
<div class="overflow-x-auto">
  <table class="table">
    <thead>
      <tr>
        <th>開始日</th>
        <td></td>
        <th>終了日</th>
        <th>お薬とサプリ</th>
      </tr>
    </thead>

    <tbody>
      <% @schedules.each do |schedule| %>
        <tr id="<%= dom_id(schedule) %>">
          <td><%= schedule.start_date_ja %></td>
          <td>〜</td>
          <td><%= schedule.end_date_ja %></td>
          <td>
            <% if schedule.drug.present? %>
              <div class="badge bg-sky-500 text-zinc-50"><%= schedule.drug.drug_name %></div>
            <% elsif schedule.supplement.present? %>
              <div class="badge bg-leaf-500 text-zinc-50"><%= schedule.supplement.supplement_name %></div>
            <% end %>
          </td>
          <td>
            <%= link_to "編集", edit_user_schedule_path(current_user, schedule) %>
            <%= link_to "削除", user_schedule_path(current_user, schedule), data: { turbo_method: :delete, turbo_confirm: "#{schedule.drug.present? ? schedule.drug.drug_name : schedule.supplement.supplement_name}を削除しますか？" } %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
