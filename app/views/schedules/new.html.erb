<%= form_with model: @schedule, url: user_schedules_path(current_user), local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <table>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
  </table>

  <h2>どちらか一方をお選びくささい。</h2>

  <table>
    <tr>
      <td><%= f.collection_select :drug_id, Drug.all, :id, :drug_name, include_blank: "お薬" %></td>
      <td><%= f.collection_select :supplement_id, Supplement.all, :id, :supplement_name, include_blank: "サプリメント" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録" %></li>
    </ul>
  </div>
<% end %>
