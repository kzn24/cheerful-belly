<%= form_with model: @schedule, url: user_schedule_path(current_user), local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="card place-items-center">
    服用期間
    <table>
      <tr>
        <th><%= f.label :start_date, "開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>

      <tr>
        <th><%= f.label :end_date, "終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
    </table>
  </div>

  <div class="divider"></div>

  <div class="card place-items-center">
    どちらか一方をお選びください。

    <table>
      <tr>
        <td><%= f.collection_select :drug_id, Drug.all, :id, :drug_name, { include_blank: "お薬" }, { class: "select select-bordered select-sm w-full max-w-xs border-sky-500" } %></td>
        <td><%= f.collection_select :supplement_id, Supplement.all, :id, :supplement_name, { include_blank: "サプリメント" }, { class: "select select-bordered select-sm w-full max-w-xs border-leaf-500 mx-3" } %></td>
      </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "登録" %></li>
      </ul>
    </div>
  </div>
<% end %>
