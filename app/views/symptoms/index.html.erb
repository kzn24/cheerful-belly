<!-- 症状リスト一覧ページ -->

<%= form_with model: @symptom, local: true do |f| %>
  <div>
    <%= f.label :symptom_name, "症状を新しく追加する" %><br>
    <%= f.text_field :symptom_name, placeholder: "症状をカンマ(,)区切りで複数登録できます。" %><br>
  </div>
  <br>
  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>

<br>
<br>
<br>

<% content_for :title, "Symptoms" %>

<h1>症状リスト</h1>
<br>
<% @symptoms.each do |symptom| %>
  <%= turbo_frame_tag dom_id(symptom) do %>
    <div>
      <%= symptom.symptom_name %>
      <%= link_to "編集", edit_symptom_path(symptom) %>
      <%= link_to "削除", symptom_path(symptom), data: { turbo_stream: true, turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
    </div>
  <% end %>
<% end %>
